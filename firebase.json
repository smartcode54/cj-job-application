{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ]
    }
  ],
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/api/branches",
        "function": "getBranches"
      },
      {
        "source": "/api/health",
        "function": "healthCheck"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
